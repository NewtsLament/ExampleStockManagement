<Window x:Class="ExampleStockManagement.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleStockManagement"
        xmlns:viewModels="clr-namespace:ExampleStockManagement.ViewModel"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="409" Width="369">
    <Window.DataContext>
        <viewModels:AddItemViewModel x:Name="addItemViewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="329*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Center" Text="{Binding Description}" TextWrapping="Wrap" VerticalAlignment="Center" Width="349" Height="309"/>
        <Button x:Name="OKBtn" Content="OK" HorizontalAlignment="Left" Margin="43,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="80" Height="20" Click="OKBtn_Click" IsDefault="True"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="240,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="80" Height="20" IsCancel="True"/>

    </Grid>
</Window>
